theme = catppuccin-mocha.conf

keybind = alt+left=unbind
keybind = alt+right=unbind
keybind = alt+up=unbind
keybind = alt+down=unbind

keybind = ctrl+shift+j=ignore
keybind = ctrl+shift+j=new_split:down
keybind = ctrl+shift+l=ignore
keybind = ctrl+shift+l=new_split:right

keybind = ctrl+h=ignore
keybind = ctrl+h=goto_split:left
keybind = ctrl+j=ignore
keybind = ctrl+j=goto_split:down
keybind = ctrl+k=ignore
keybind = ctrl+k=goto_split:up
keybind = ctrl+l=ignore
keybind = ctrl+l=goto_split:right

